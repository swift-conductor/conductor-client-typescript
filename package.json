{
  "name": "@swift-conductor/conductor-client",
  "description": "Typescript Client for Swift Conductor",
  "version": "v0.1.0",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    },
    "./browser": {
      "require": "./dist/browser.js",
      "import": "./dist/browser.mjs",
      "types": "./dist/browser.d.ts"
    }
  },
  "private": false,
  "homepage": "https://swiftconductor.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/swift-conductor/conductor-client-typescript"
  },
  "keywords": [
    "conductor",
    "workflow",
    "orchestration",
    "microservice"
  ],
  "types": "dist/index.d.ts",
  "main": "dist/index.js",
  "scripts": {
    "lint": "npx eslint . --ext .js,.ts",
    "lint-fix": "npx eslint . --fix --ext .js,.ts",
    "build": "tsup",
    "test": "jest --force-exit --detectOpenHandles",
    "ci": "npm run lint && npm run test",
    "docs": "typedoc --plugin typedoc-plugin-markdown"
  },
  "author": "Swift Software Group & the Swift Conductor community",
  "license": "Apache-2.0",
  "files": [
    "dist",
    "README.md"
  ],
  "contributors": [
    {
      "name": "Black Diamond"
    },
    {
      "name": "Nick Tomlin"
    },
    {
      "name": "James Stuart Milne"
    }
  ],
  "devDependencies": {
    "@babel/preset-typescript": "^7.22.5",
    "@tsconfig/node20": "^1.0.1",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "dotenv": "^16.0.1",
    "eslint": "^6.1.0",
    "jest": "^29.4.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.7.0",
    "tsup": "^7.1.0",
    "typedoc": "^0.25.7",
    "typedoc-plugin-markdown": "^3.17.1",
    "typescript": "4.9.5"
  },
  "dependencies": {
    "whatwg-fetch": "^3.0.0",
    "rxjs": "^6.4.0",
    "es6-promise": "^4.2.4",
    "url-parse": "^1.4.3"
  },
  "tsup": {
    "target": "node20",
    "sourcemap": true,
    "format": [
      "esm",
      "cjs"
    ],
    "entry": [
      "index.ts",
      "browser.ts"
    ],
    "dts": true,
    "clean": true,
    "splitting": false,
    "types": [
      "index.ts"
    ]
  },
  "engines": {
    "node": ">=20"
  }
}
